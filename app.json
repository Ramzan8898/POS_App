{
  "expo": {
    "name": "POS",
    "slug": "POS",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "pos",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": { "supportsTablet": true },

    "android": {
      "windowSoftInputMode": "adjustResize",
      "package": "com.anonymous.POS",
      "permissions": [
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": { "backgroundColor": "#E6F4FE" },
      "edgeToEdgeEnabled": true
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { "backgroundColor": "#000000" }
        }
      ],
      "expo-image-picker",
      "expo-video",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow the app to save receipt images to your phone gallery.",
          "savePhotos": true
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
